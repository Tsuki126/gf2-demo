[Unit]
Description=gf2-demo-api test environment
Documentation=
After=network.target
Wants=

[Service]
Type=simple
Environment=GF_GERROR_BRIEF=true GF_GCFG_FILE=config.test.yaml
WorkingDirectory=/app/gf2-demo_test
ExecStart=/bin/sh -c '/app/gf2-demo_test/gf2-demo-api >> gf2-demo-api.log 2>&1'
KillMode=ctrl-group
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
