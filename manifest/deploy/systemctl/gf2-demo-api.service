[Unit]
Description=gf2-demo-api production environment
Documentation=
After=network.target
Wants=

[Service]
Type=simple
#User=
#Group=
Environment=GF_GERROR_BRIEF=true GF_GCFG_FILE=config.prod.yaml
WorkingDirectory=/usr/local/gf2-demo
ExecStart=/usr/local/gf2-demo/gf2-demo-api
KillMode=process
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
